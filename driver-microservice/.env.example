# Driver Microservice Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5003

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/islandhop_drivers
MONGODB_OPTIONS=retryWrites=true&w=majority

# JWT Configuration (for future authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://islandhop.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/driver-service.log

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./config/firebase-service-account.json

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Redis Configuration (for caching - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Keys
PAYMENT_SERVICE_API_KEY=your_payment_service_api_key
NOTIFICATION_SERVICE_API_KEY=your_notification_service_api_key
